<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorButtonNormal"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".AboutapplicationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:background="@color/black"
        android:gravity="end|center"
        android:minHeight="?attr/actionBarSize"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:theme="@style/AppTheme"
        app:logo="@drawable/logo"
        app:titleMarginStart="5dp"
        app:titleTextColor="@color/white" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/aboutus" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:fontFamily="@font/paytone_one"
                android:text="Kids learning application is designed for kindergarden kids to learn and play.This application will help
to increase the learning ability of kids among English and Maths."
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>